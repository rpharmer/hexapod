#include "hexapod-common.hpp"

char get0_7Lsbits(int v)
{
  return v & 0xff;
}

char get8_15Lsbits(int v)
{
  return (v >> 8) & 0xff;
}

char get16_23Lsbits(int v)
{
  return (v >> 16) & 0xff;
}

char get24_31Lsbits(int v)
{
  return (v >> 24) & 0xff;
}

// c3 is most significant byte, c0 is least significant byte
int getInt(char c3, char c2, char c1, char c0)
{
  return (c3 << 24) | (c2 << 16) | (c1 << 8) | c0;
}